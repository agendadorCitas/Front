<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Editar correo
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/v1/inicio"><i class="fa fa-home"></i>Home</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="box">



            <div class="box-body">
                <form name="formulario" id="formulario" action="saveEmail" method="post">
                    <div class="form-group has-success">
                        <label>ID</label>
                        <input type="text" class="form-control" value="<%= datos.id %>" name="id" class="form-control"
                            readonly>
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon">@</span>
                        <input type="text" class="form-control" value="<%= datos.email %>" name="email"
                            placeholder="Usuario">
                    </div>
                    <div class="box-footer">
                        <button class="btn btn-app" type="submit" onclick="actualizar()"></a>
                            <i class="fa fa-save"></i> Guardar
                        </button>
                        <a href="/viewEmail/email" class="btn btn-app">
                            <i class="fa fa-times"></i>
                            cancelar
                        </a>
                    </div>
                </form>
            </div>
            <script>
                function actualizar() {
                    const form = document.querySelector("#formulario");
                    form.addEventListener("submit", event => {
                        event.preventDefault();
                        Swal.fire({
                            title: 'Estas seguro de guardar estos cambios?',
                            text: "Estas actualizando la informacion",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Si, actualizar!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                form.submit();
                                Swal.fire(
                                    'Actualizado!',
                                    'Su correo se actualizo.',
                                    'success'
                                )
                            }
                        })

                    })
                }


            </script>





    </section>

</div>